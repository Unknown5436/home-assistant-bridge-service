# Core Settings
HA_URL=http://homeassistant.local:8123
HA_TOKEN=your_long_lived_access_token
API_KEYS=["key1","key2"]

# SSL Configuration (optional)
SSL_CERT=/path/to/cert.pem
SSL_KEY=/path/to/key.pem

# Feature Flags
CACHE_TTL=300
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
METRICS_ENABLED=true
WEBSOCKET_ENABLED=true

# WebSocket Configuration
WEBSOCKET_RECONNECT_MAX_ATTEMPTS=0
WEBSOCKET_RECONNECT_MAX_DELAY=60

# WebSocket Event Filtering (Recommended for Raspberry Pi 4)
# Enable filtering to reduce CPU load on low-power devices
WEBSOCKET_FILTER_ENABLED=true
# Only process these entity types (empty list = process all except excluded)
WEBSOCKET_ENTITY_FILTERS=["light.","switch.","sensor.temperature","binary_sensor.","climate."]
# Exclude noisy domains that generate frequent updates
WEBSOCKET_EXCLUDE_DOMAINS=["media_player","camera","automation"]

# Cache Update Strategy
# If true, updates cache with WebSocket data (faster, less HA load)
# If false, invalidates cache forcing REST API call (guaranteed consistency)
WEBSOCKET_UPDATE_CACHE=true

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false
